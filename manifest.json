{
  "manifest_version": 3,
  "name": "IPTea4theStingy",
  "version": "1.0",
  "description": "Parse information from IPTorrents seeding required page (works on all Chromium browsers)",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://iptorrents.com/*"],
  "icons": {
  "16": "icon16.png",
  "48": "icon48.png",
  "128": "icon128.png"
},
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png", 
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://iptorrents.com/seeding_required.php"],
      "js": ["content.js"]
    }
  ]
}